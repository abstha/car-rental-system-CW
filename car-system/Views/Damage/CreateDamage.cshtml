            </div>

        </div>
    </header>
    <h1>Create Damage</h1>

    <form asp-action="CreateDamage" method="post">
        <div class="form-group">
            <label for="UserID">User ID:</label>
            <input type="text" class="form-control" id="UserID" name="UserID" value="@Model.UserID" required>
        </div>
        <div class="form-group">
            <label for="VerifiedBy">Verified By:</label>
            <input type="text" class="form-control" id="VerifiedBy" name="VerifiedBy" value="@Model.VerifiedBy" required>
        </div>
        <div class="form-group">
            <label for="CarId">Car ID:</label>
            <input type="text" class="form-control" id="CarId" name="CarId" value="@Model.CarId" required>
        </div>
        <div class="form-group">
            <label for="Amount">Amount:</label>
            <input type="text" class="form-control" id="Amount" name="Amount" value="@Model.Amount" required>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
    </form>
